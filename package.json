{
  "name": "wmgcat_backend",
  "version": "1.0.0",
  "description": "Backend Service for website",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx index.ts",
    "dev": "tsx watch index.ts",
    "build": "esbuild ./index.ts --platform=node --bundle --minify --outfile=./dist/index.min.cjs --target=esnext",
    "test": "mocha",
    "docker": "npm run build && docker build . -t wmgcat_backend"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "mocha",
    "backend",
    "s3",
    "postgresql",
    "mvc"
  ],
  "author": "wmgcat",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "mocha": "^11.7.5",
    "pg": "^8.16.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "esbuild": "^0.27.2"
  }
}
