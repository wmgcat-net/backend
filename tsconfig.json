{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "composite": true,
        "noEmit": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "tests/*",
        "./dist/**/*"
    ]
}